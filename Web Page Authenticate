INSERT DETAILS(data.php)
<?php
include_once('db.php');
$userid=$_POST['userid'];
$password=$_POST['password'];
echo $userid. $password;
$ans=mysqli_query($conn,"INSERT INTO user (userid,password) VALUES ('$userid','$password')");
	echo $ans;
	if($ans)
    echo"successfully inserted";
    else
    echo "failed".mysqli_error($conn);
?>

CONNECTIVITY (db.php)

<?php
$dbhost="localhost";
$dbuser="root";
$dbpass="";
$db="login";
$conn=mysqli_connect($dbhost, $dbuser, $dbpass, $db) or die ("connect failed: %s\n".$conn->error);
$db=mysqli_select_db($conn,'login');
?>

