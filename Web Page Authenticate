</body>
</html>

IMAGE UPLOAD(image.html)

<html>
<body>
<form action="imageupload.php" method="post" enctype="multipart/form-data" target="_blank">
 <label for="Image Upload">Image Upload:<br><input type="file" name="file" >
 <input type="submit" value="submit">
 </form>
 </body>
 </html>
 
 IMAGE UPLOAD(imageupload.php)
 
 <?php
$filename=$_FILES['file']['name'];
$filetype=$_FILES['file']['type'];
if($filetype=='image/jpeg' or $filetype=='image/png' or $filetype=='image/gif')
{
if(move_uploaded_file($_FILES['file']['tmp_name'],'images/'.$filename))
	echo "Image Stored Successfully <a href='view.php'> View Image </a>";
$filepath="dir_name`/".$filename;
}
?>

DISPLAY IMAGE(view.php)

<?php
echo "<img src='images\'".$filename." rel=''style='width:200px;height:200px;'>";
?>

